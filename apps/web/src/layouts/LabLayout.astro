---
import Logo from "../components/Logo.svelte";
import "@void-drift/core/styles/reset.css";
import "@void-drift/core/styles/tokens.css";
import "@void-drift/core/styles/buttons.css";
import "../styles.css";

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const LINKS = [
    { href: "/lab", label: "Dashboard", exact: true },
    { href: "/lab/entities/ship", label: "Ship", exact: false },
    { href: "/lab/entities/star", label: "Star", exact: false },
    { href: "/lab/typography", label: "Typography", exact: false },
    { href: "/lab/resources", label: "Resources", exact: false },
    { href: "/lab/buttons", label: "Buttons", exact: false },
    { href: "/", label: "← Back to Game", exact: true },
];
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Google Fonts: Noto Sans Math -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans+Math&display=swap"
            rel="stylesheet"
        />

        <title>{title} | Void·Drift Lab</title>
    </head>
    <body>
        <div class="lab-grid">
            <!-- Column 1: Nav Rail -->
            <aside class="nav-rail">
                <div class="logo-area">
                    <Logo />
                </div>
                <nav class="tray">
                    {
                        LINKS.map((link) => {
                            const isActive = link.exact
                                ? currentPath === link.href
                                : currentPath.startsWith(link.href) &&
                                  link.href !== "/lab";

                            return (
                                <a
                                    href={link.href}
                                    class:list={[{ active: isActive }]}
                                >
                                    {link.label}
                                </a>
                            );
                        })
                    }
                </nav>
            </aside>

            <!-- Column 2 Row 1: Header -->
            <header class="page-header">
                <h1>Lab // {title}</h1>
            </header>

            <!-- Column 2 Row 2: Main Stage -->
            <main class="main-stage">
                <slot />
            </main>

            <!-- Column 3: Inspector (Spans both rows) -->
            <aside class="inspector-rail">
                <slot name="inspector" />
            </aside>
        </div>
    </body>
</html>

<style>
    :global(body) {
        margin: 0;
        padding: 0;
        overflow: hidden;
        background: var(--color-void);
        color: var(--color-text);
        font-family: "Noto Sans Math", sans-serif;
    }

    .lab-grid {
        display: grid;
        grid-template-columns: 250px 1fr 300px;
        grid-template-rows: auto 1fr;
        grid-template-areas:
            "nav header inspector"
            "nav main   inspector";
        height: 100vh;
        width: 100vw;
        overflow: hidden;
    }

    /* Column 1: Nav Rail */
    .nav-rail {
        grid-area: nav;
        background: var(--color-void-light);
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .logo-area {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        flex-shrink: 0;
    }

    .tray {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        gap: 0.25rem;
        overflow-y: auto;
        flex: 1;
    }

    /* Column 2 Row 1: Header */
    .page-header {
        grid-area: header;
        padding: 1rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        background: var(--color-void);
        display: flex;
        align-items: center;
    }

    .page-header h1 {
        margin: 0;
        font-size: 0.7rem;
        color: var(--color-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.25em;
    }

    /* Column 2 Row 2: Main Stage */
    .main-stage {
        grid-area: main;
        overflow-y: auto;
        background: var(--color-void);
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        flex-direction: column;
    }

    /* Column 3: Inspector */
    .inspector-rail {
        grid-area: inspector;
        background: var(--color-void-light);
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    /* Link Styles */
    a {
        text-decoration: none;
        color: var(--color-text-dim);
        padding: 0.6rem 1rem;
        text-align: left;
        border-radius: var(--radius-sm);
        text-transform: uppercase;
        font-size: 0.75rem;
        transition: all 0.2s;
        border: 1px solid transparent;
        display: block;
    }

    a:hover {
        color: var(--color-text);
        background: rgba(255, 255, 255, 0.05);
    }

    a.active {
        color: var(--color-acid-lime);
        border: 1px solid rgba(212, 255, 0, 0.3);
        background: rgba(212, 255, 0, 0.1);
    }
</style>
